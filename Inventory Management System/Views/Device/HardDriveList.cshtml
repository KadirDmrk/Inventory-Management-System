@using Inventory_Management_System.Models.Class.Hardware
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<HardDrive>
@{
    ViewBag.Title = "HardDriveList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong></strong>@TempData["AlertMessage"]
    </div>
}

@using (Html.BeginForm("HardDriveList", "Device", FormMethod.Get))
{
    <p>
        Harddisk: @Html.TextBox("p")
        <input type="submit" value=" Ara" />
    </p>
}


<table class="table table-bordered">
    <tr>

        <th> HARDDİSK</th>
        <th> SİL</th>
        <th> GÜNCELLE</th>

    </tr>
    <tbody>
        @foreach (var ctgr in Model)
        {
            <tr>

                <td> @ctgr.HardDriveName</td>
                <td> <a href="/Device/HardDriveDelete/@ctgr.HardDriveID" class="btn btn-danger"> SİL</a></td>
                <td> <a href="/Device/HardDriveImport/@ctgr.HardDriveID" class="btn btn-success"> GUNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("HardDriveList", new { sayfa }))
<a href="/Device/HardDriveAdd" class="btn btn-primary"> Harddisk Ekle</a>
