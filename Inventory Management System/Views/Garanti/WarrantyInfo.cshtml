@model Inventory_Management_System.Models.Class.Warrant

@{
    ViewBag.Title = "Lenovo Garanti Kontrolü";
}

<h2>Lenovo Garanti Kontrolü</h2>

@using (Html.BeginForm("Index", "Garanti", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.WarrantSerialNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.WarrantSerialNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.WarrantSerialNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Garanti Kontrol Et" class="btn btn-default" />
        </div>
    </div>
}