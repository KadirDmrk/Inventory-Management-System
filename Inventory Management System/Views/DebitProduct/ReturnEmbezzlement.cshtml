@using Inventory_Management_System.Models.Class
@model List<Employees>



@{
    ViewBag.Title = "ReturnEmbezzlement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />


@if (Model != null && Model.Any())
{
    <table id="tbl1" class="table table-bordered" style="margin-top:20px;">
        <thead>
            <tr>
                <th>Personel Ad</th>
                <th>Personel Soyad</th>
                <th>Ürünler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prdc in Model)
            {
                <tr>
                    <td>@prdc.EmployeeName</td>
                    <td>@prdc.EmployeeSurname</td>
                    <td><a href="~/Department/DepartmentEmployeesDebit/@prdc.EmployeeID" class="btn btn-default" style="background-color:cadetblue">Zimmetli</a></td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <p>Arama kriterlerine uygun sonuç bulunamadı.</p>
}

<button onclick="window.history.back()" class="back-button">Geriye Dön</button>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>

<script>
    $('#tbl1').dataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
        }
    });
</script>
