@model Inventory_Management_System.Models.Class.Department
@{
    ViewBag.Title = "DepartmentImport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

@using (Html.BeginForm("DepartmentUpdate", "Department", FormMethod.Post, new { onsubmit = "return confirm('Bu işlemi yapmak istiyor musunuz?');" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.DepartmentName)
        @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control", maxlength = "50", oninput = "validateInput(this)", style = "width: 500px;" })
        @Html.HiddenFor(x => x.DepartmentID)

    </div>
    <br />

    <button class="btn btn-warning"> Departman  Güncelle </button>
}
<br />
<button onclick="window.history.back()" class="back-button">Geriye Dön</button>




<script>
    function validateInput(input) {
        input.value = input.value.replace(/[^a-zA-ZğüşıöçĞÜŞİÖÇ\s.,;]/g, '');
    }
</script>